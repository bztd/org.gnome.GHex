{
    "app-id": "org.gnome.GHex",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "ghex",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.gtk.vfs",
        "--talk-name=org.gtk.vfs.*",
        "--filesystem=xdg-run/gvfsd",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "ghex",
            "buildsystem": "meson",
            "config-opts" : [ "-Dbuildtype=release" ],
            "sources": [{
                "type": "git",
                "url": "https://gitlab.gnome.org/GNOME/ghex.git",
                "tag": "42.0",
                "commit": "c28eaa930ee7f88e56b003e81037dd9828ccc5b1"
            }]
        }
    ]
}
